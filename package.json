{
  "name": "vscode-sukharev-nand2tetris-hdl",
  "displayName": "Sukharev Nand2Tetris snippets",
  "description": "Snippets and syntax highlighting for the HDL and ASM languages from the Nand2Tetris course.",
  "version": "0.1.1",
  "publisher": "disukharev",
  "engines": {
    "vscode": "^1.13.0"
  },
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/di-sukharev/sukharev-nand2tetris-snippets"
  },
  "categories": [
    "Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hack_hdl",
        "aliases": [
          "HDL (Hack)"
        ],
        "extensions": [
          ".hdl"
        ],
        "configuration": "./hdl.language-configuration.json"
      },
      {
        "id": "hack_asm",
        "aliases": [
          "ASM (Hack)"
        ],
        "extensions": [
          ".asm"
        ],
        "configuration": "./asm.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hack_hdl",
        "scopeName": "source.hdl",
        "path": "./syntaxes/hdl.tmLanguage.json"
      },
      {
        "language": "hack_asm",
        "scopeName": "source.hack_asm",
        "path": "./syntaxes/hack.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "hack_hdl",
        "path": "./snippets/hdl.snippets.json"
      }
    ]
  }
}
